<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kz.jcourier">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name="kz.jcourier.app.JCourierApplication"
        android:theme="@style/Theme.JCourier">
        <activity
            android:name="kz.jcourier.ui.containers.EntryPointActivity"
            android:exported="true"
            android:label="@string/title_activity_auth"
            android:theme="@style/Theme.JCourier" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="kz.jcourier.ui.containers.ChatActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.JCourier.NoActionBar">

        </activity>
    </application>

</manifest>